<div class="flash"><%= notice %></div>
<h1>Books</h1>

<table>
    <thead>
    <tr>
    <th>title</th> <th>body</th> <th colspan="3"></th></th>
    </tr>
    </thead>
    <tbody>
<% @lists.each do |list| %>
    <tr>
    <td width=30%><%= list.title %></td>
    <td width=50%><%= list.body %></td>
    <td><%= link_to "show", list_path(list.id) %></td>
    <td><%= link_to "edit", edit_list_path(list.id) %></td>
    <td><%= link_to "destroy", list_path(list.id), method: :delete, "data-confirm"=>"Are you sure?" %></td>
    </tr>

<% end %>
</tbody>
</table>

<h2>New book</h2>

<% if @list.errors.any? %>
<div class="error">
<div class="error-title">
  <%= @list.errors.count %>errors prohibited this book from being saved:
</div>
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %></div>

<%= form_with model: @list,yrl:'/lists', method: :post do |f| %>
 <div class="field">Title
 <p><%= f.text_field :title %></p>
 </div>
 <div class="field">Body
 <p><%= f.text_area :body %></P>
 </div>
 <div class="action">
 <%= f.submit 'Create Book' %>
 </div>
<% end %>